GCC=gcc
LUSTREC=/usr/local/bin/lustrec
LUSTREC_BASE=/usr/local
INC=${LUSTREC_BASE}/include/lustrec

switch_SetReset12:
	${GCC} -I${INC} -I. -c switch.c
	${GCC} -I${INC} -I. -c switch_main.c
	${GCC} -I${INC} -c ${INC}/io_frontend.c
	${GCC} -o switch_SetReset12 io_frontend.o  switch.o switch_main.o 

clean:
	\rm -f *.o switch_SetReset12

FRAMACEACSL=`frama-c -print-share-path`/e-acsl
switch_eacsl.c: switch.c switch.h
	frama-c -e-acsl-full-mmodel -machdep x86_64 -e-acsl switch.c -then-on e-acsl -print -ocode switch_eacsl.c


switch_main_eacsl.c: switch.c switch.h switch_main.c
	frama-c -e-acsl-full-mmodel -machdep x86_64 -e-acsl switch.c switch_main.c -then-on e-acsl -print -ocode switch_main_eacsl.i
	grep -v _fc_stdout switch_main_eacsl.i > switch_main_eacsl.c

switch_main_eacsl: switch_main_eacsl.c
	${GCC} -Wno-attributes -I${INC} -I. -c switch_main_eacsl.c
	${GCC} -I${INC} -c ${INC}/io_frontend.c
	${GCC} -Wno-attributes -o switch_main_eacsl io_frontend.o  ${FRAMACEACSL}/e_acsl.c ${FRAMACEACSL}/memory_model/e_acsl_bittree.c ${FRAMACEACSL}/memory_model/e_acsl_mmodel.c switch_main_eacsl.o 


